state-bar.articles(
root-state='catalogue'
bar-title='Каталог'
)
  div(layout='row' layout-align='space-between center')

    //md-button.md-fab.md-mini.md-icon-button.default-button(ng-click='vm.isSideNavOpen = !vm.isSideNavOpen')
    //  i.material-icons search
    //
    //.flex

    .cart-totals(layout='column' sa-animate-on-change='vm.cartTotal' change-class="lite change-up" ng-if='!vm.isAdmin')
      p.no-margin.text-right
        span.gray Сумма заказа:
        = ' '
        span.bold(
        style='min-width: 90px; display: inline-block; text-align: right;'
        ) {{vm.cartSubTotal | number: 2}}&nbsp;₽

      p.no-margin.text-right(ng-if='vm.cartDiscount')
        span.gray К оплате со скидкой {{ vm.cartDiscount | number: 1 }}%:
        = ' '
        span.bold(style='min-width: 90px; display: inline-block; text-align: right;'
        ) {{ vm.cartTotal | number:2}}&nbsp;₽

    .buttons(ng-if='vm.isAdmin && vm.currentState==="item"')
      md-button.md-fab.md-mini.md-icon-button.admin-button(ng-click='vm.stateBarButtonClick($event)' title='Редактировать рамку')
        i.material-icons edit
      md-button.md-fab.md-mini.md-icon-button.admin-button(ng-click='vm.stateBarButtonClick($event)' title='Удалить рамку')
        i.material-icons delete
      md-button.md-fab.md-mini.md-icon-button.admin-button(ng-click='vm.stateBarButtonClick($event)' title='Добавить фото')
        i.material-icons add_a_photo
    .buttons(ng-if='vm.isAdmin')
      md-button.md-fab.md-mini.md-icon-button.admin-button(ng-click='vm.goToCreateFrame()' title='Добавить рамку')
        i.material-icons add

section.busy(ng-if="!vm.ready" layout="row" layout-align="center center")
  md-progress-circular(md-diameter="200" md-mode="indeterminate")

md-content.articles(ng-if="vm.ready" layout="row" layout-align="center" )

  md-sidenav#sidenav-left.md-sidenav-left.md-whiteframe-1dp.margin-top-bottom(
  layout-padding md-component-id="left-nav"
  md-is-locked-open="$mdMedia('gt-xs')"
  md-is-open='vm.isSideNavOpen'
  ng-include="'app/domain/catalogue/partials/sidenav.html'"
  )

  .ui-view(flex)
