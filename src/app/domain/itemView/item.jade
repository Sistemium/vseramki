.for-md-dialog(style="height: {{ windowHeight - (windowWidth >= 960 ? 64 : 56) }}px;")
  .name-head(flex=100) {{vm.article.name}}
  .md-whiteframe-1dp(layout-align="" layout="row" layout-sm='column' layout-xs='column')
    .photo(layout='column' layout-align='top center')
      img.image-size(ng-src='{{vm.article.images[0].smallSrc}}')
      .small-carousel(ng-if='vm.articleImages.length')
        jk-carousel(data='vm.articleImages', item-template-url="'app/domain/itemView/photoTemplate.html'" max-width='300px' max-height='150px')

      md-button.md-raised.add-to-cart(ng-click='vm.addToCart(vm.article)' ng-if='!vm.article.inCart && !vm.isEditable')
        | {{'Добавить в корзину'}}
      md-button.md-raised.add-to-cart(ng-click='vm.showAdvanced($event)' ng-if='vm.isEditable')
        | {{'Загрузить фото '}}
      md-button.md-raised.add-to-cart(ng-click='' ng-if='vm.isEditable')
        | {{'Выбрать фото'}}


    .overall-info

      div.order(ng-if='vm.article.inCart && !vm.isEditable')
        h1.header-h1 Заказ
        md-table-container
          table(md-table='')
            tr(md-row colspan='2')
              td
                p.name-style Заказано:
              td.td-fixed-size
                div.action-buttons(layout='row' layout-align="start center")
                  div.div-order-info-num-picker
                    md-button.icon-button-catalogue(ng-click='vm.minusOne(vm.article)') -
                    md-input-container
                      input.custom-input(
                      aria-label="Количество"
                      ng-model='vm.article.inCart.count'
                      type="number"
                      ng-blur="vm.onBlur(vm.article)"
                      ng-change="vm.onCartChange(vm.article)"
                      required
                      min='1'
                      step='1'
                      )
                    md-button.icon-button-catalogue(ng-click='vm.plusOne(vm.article)') +
            tr(md-row)
              td(md-cell='')
                p Сумма:
              td(md-cell='')
                p {{vm.price * vm.article.inCart.count || 0}} руб.


      div.item-info
        h1.header-h1 О товаре
        md-table-container
          table(md-table='')
            tr(md-row)
              td(md-cell='')
                p Размер:
              td.td-fixed-size(md-cell='')
                | {{vm.size.name}}
            tr(md-row)
              td(md-cell='')
                p Материал:
              td(md-cell='')
                p {{vm.material.name}}
            tr(md-row)
              td(md-cell='')
                p Цвет:
              td(md-cell='')
                p {{vm.colour.name}}
            tr(md-row)
              td(md-cell='')
                p Вес:
              td(md-cell='')
                p {{vm.article.pieceWeight}} кг
            tr(md-row)
              td(md-cell='')
                p Штук в пачке:
              td(md-cell='')
                p {{vm.article.packageRel}}

      div.price
        h1.header-h1 Цена
        md-table-container
          table(md-table='')
            tr(md-row flex='initial')
              td(md-cell='')
                p Цена за 1 шт.:
              td.td-fixed-size(md-cell='')
                p {{vm.price | number: 2}}
            tr(md-row)
              td(md-cell='')
                p Цена со скидкой 10%:
              td(md-cell='')
                p {{244 | number: 2}}
            tr(md-row)
              td(md-cell='')
                p Цена со скидкой 20%:
              td(md-cell='')
                p {{244 | number: 2}}
            tr(md-row)
              td(md-cell='' colspan='2')
                cite * — при сумме заказа более 5000 р. скидка 10%, более 10000 р. — 20%


  div(ng-if='vm.isEditable')
    div.md-padding.custom-h3(ng-if='vm.articleImages.length')
      h2 Для текущей рамки загружено {{vm.articleImages.length}} фото
      md-grid-list(
        md-cols='1',
        md-cols-sm='2',
        md-cols-md='3',
        md-cols-gt-md='6',
        md-row-height-gt-md='1:1',
        md-row-height='4:3',
        md-gutter='2px',
        md-gutter-gt-sm='1px'
      )

        md-grid-tile.md-padding(
          ng-repeat='img in vm.articleImages track by img.id',
          md-rowspan='1',
          md-colspan='1',
          md-colspan-sm='1',
          md-colspan-xs='1'
          ng-click="vm.imageClick(img)"
        )
          div.photo-wrapper(ng-class="{'clicked': img.id == vm.clickedImage.id}", layout="column", layout-align="center center")
            img.md-padding(ng-src='{{img.thumbnailSrc}}')
            md-button.md-raised(ng-click="vm.deletePhoto(img)") Удалить фото


  div.content.example.bordered(class='gallery')
    ng-gallery(images='vm.testImg' thumbs-num='10')





