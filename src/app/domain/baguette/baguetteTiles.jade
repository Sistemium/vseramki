div.baguettes(layout='row')

  div.scrolling-contents(
    ng-if='!vm.isRoot'
    style='height: {{ windowHeight - (windowWidth >= 960 ? 64 : 56) }}px;'
  )

    md-list.custom-list(ng-hide='vm.hideBaguetteList')
      md-list-item.md-item-text.md-whiteframe-z1(layout='row' layout-wrap='')
        h3 Всего багетов: {{vm.baguettes.length}}
        span(flex)
        md-button.pink-button(ng-click='vm.backToList()') Вернуться к списку

      md-list-item(
      ng-repeat='bag in vm.baguettes |orderBy: bag.name track by bag.id',
      layout='row',
      layout-wrap=''
      )
        .md-item-text.md-whiteframe-z1(flex='', ng-class="{'active-baguette ': vm.currId == bag.id }" ng-click='vm.changeBaguette(bag)')
          p {{bag.material.name}} "{{bag.brand.name}}" {{bag.colour.name}}/{{bag.borderWidth}}мм.

  .ui-view(flex)
    md-toolbar.md-table-toolbar.md-default
      .md-toolbar-tools.md-whiteframe-1dp.fixed-toolbar

        div(layout='row' layout-align='center center' ng-class="{'styles-for-mobile-text': vm.useMobile}")
          h2 Плитка багетов
          div(style='display:inherit; margin-top: 3px;')
            i.material-icons.icon-button.icon-button-disabled(ng-click="vm.changeView('baguettes.table')" ng-class="{'icons-button-active': vm.currentState == '/table'}") view_headline
            span.forbid-marking(style='cursor:default') |
            i.material-icons.icon-button.icon-button-disabled(ng-click="vm.changeView('baguettes.tiles')" ng-class="{'icons-button-active': vm.currentState == '/tiles'}") view_comfy

        span(ng-if='!vm.useMobile' flex)

        md-button.md-fab.md-mini.md-icon-button.pink-button.pink-button-fab(
          ng-click='vm.goToCreateBaguette()'
          ng-class="{'styles-for-mobile-button': vm.useMobile}"
        )
          i.material-icons add circle

    div.repeat-wrapper(layout='row' layout-align='center center')
      md-virtual-repeat-container(style='height: {{windowHeight - 150}}px')
        .repeated-group(md-virtual-repeat='bag in vm.chunked' layout='row' layout-align='center center')
          div.repeated-group-item(ng-repeat='i in bag' flex)
            md-card(layout='column' layout-align='center center')

              img.md-card-image.image-size(
                ng-src='{{i.images[0].thumbnailSrc}}'
                ng-if='i.images.length'
                ng-click='vm.showImageDialog($event, i.id)'
                alt='Baguette {{$index}}'
              )

              img.md-card-image.image-size(
                ng-src='http://bit.ly/1Yu4VIb'
                ng-if='!i.images.length'
                ng-click='vm.showImageDialog($event, i.id)'
                alt='Baguette {{$index}}'
              )

              md-card-content(align='center')
                p
                  span.bold Цвет:&nbsp
                  span {{i.colour.name}}
                p
                  span.bold Материал:&nbsp
                  span {{i.material.name}}
                p
                  span.bold Бренд:&nbsp
                  span {{i.brand.name}}
                p
                  span.bold Ширина:&nbsp
                  span {{i.borderWidth}} мм.

              md-card-actions.pink-button(layout='row', layout-align='center center')
                md-button(ng-click='vm.editBaguette(i)') Редактировать
                md-button(ng-click='vm.deleteBaguette(i)') Удалить
