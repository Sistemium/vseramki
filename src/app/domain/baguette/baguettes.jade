.baguettes

  state-bar(
  root-state='baguettes'
  bar-title='Багет'
  )
    div(layout='row' layout-align='end center')
      md-input-container(ng-if='vm.isRootState' layout='row')
        i.material-icons.search-label search
        label(for='searcher')
        input#searcher(type="search" ng-model="vm.search" input-clear='black')

      .flex

      .buttons.margin-left(ng-if='vm.isAdmin')
        state-bar-button.admin-button(title='Добавить фото' icon='add_a_photo')
        state-bar-button.admin-button(title='Удалить багет' icon='delete')
        state-bar-button.admin-button(title='Добавить багет' icon='add')

  div(layout='row')

    md-sidenav.md-sidenav-left.md-whiteframe-1dp(
    layout-padding
    md-component-id="left-nav" md-is-locked-open="$mdMedia('gt-xs')"
    ng-if='!vm.isRootState'
    ng-include="'app/domain/baguette/partials/sidenav.html'"
    )

    .ui-view(flex)
