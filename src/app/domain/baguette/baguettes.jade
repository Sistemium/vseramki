.baguettes

  state-bar(
  root-state='baguettes'
  bar-title='Багет'
  )
    div(layout='row' layout-align='end center')
      md-input-container(ng-if='!vm.currentItem.id' layout='row')
        i.material-icons.search-label search
        label(for='searcher')
        input#searcher(type="search" ng-model="vm.search" input-clear='black')

      .flex

      .buttons.margin-left(ng-if='vm.isAdmin')

        md-button.md-fab.md-mini.md-icon-button.admin-button(
        ng-click='vm.addPhotoClick($event)'
        ng-if='vm.currentItem.id'
        title='Добавить фото'
        )
          i.material-icons add_a_photo

        md-button.md-fab.md-mini.md-icon-button.admin-button(
        ng-click='vm.deleteBaguette(vm.currentItem, $event)'
        ng-if='vm.currentItem.id'
        title='Удалить багет'
        )
          i.material-icons delete

        md-button.md-fab.md-mini.md-icon-button.admin-button(
        ng-click='vm.goToCreateBaguette()'
        title='Добавить багет'
        )
          i.material-icons add

  div(layout='row')

    md-sidenav.md-sidenav-left.md-whiteframe-1dp(
    layout-padding
    md-component-id="left-nav" md-is-locked-open="$mdMedia('gt-xs')"
    ng-if='!vm.isRoot'
    ng-include="'app/domain/baguette/partials/sidenav.html'"
    )

    .ui-view(flex)
