.header.no-padding(layout='row' layout-align='center center')

  md-input-container.no-margin(flex layout='row')
    i.material-icons.search-label search
    label(for='searcher')
    input#searcher(
    type="search" ng-model="vm.search" on-enter='vm.onEnter($event)'
    ng-model-options="{debounce: 500}"
    )

  md-button.md-raised.md-mini.micro-square(
  style='margin: 0 4px'
  ng-click='vm.resetFilters()'
  ng-if='vm.filterLength || vm.search'
  aria-label='Reset filters'
  )
    i.material-icons.mini clear

.no-padding(
resize='baguettesList'
style='height: {{ baguettesList.windowHeight - baguettesList.offsetTop - 15 }}px'
)
  md-virtual-repeat-container.clickable.scroll-y.height-100(
  md-top-index='vm.articlesListTopIndex'
  )
    .item(
    md-virtual-repeat='bag in vm.filteredBaguettes'
    ng-class="{'active ': vm.currentItem.id == bag.id }"
    ng-click='vm.sideNavListItemClick(bag)'
    )
      div {{bag.name}}
      .gray
        small {{ bag.code }}
