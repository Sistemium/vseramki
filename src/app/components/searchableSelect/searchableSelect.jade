div.component-container(layout='column')
  span.custom-label {{ vm.label }}
  md-select(ng-model='vm.model' md-on-close="vm.onCloseFn()" aria-label='vm.label')
    md-select-header(layout='row' layout-align='center center')
      md-input-container(flex)
        label Поиск {{ vm.label }}а
        input(
          elem-ready='vm.inputReady'
          ng-model="search.name"
          type="text"
          input-clear='black'
        )
    md-option(ng-repeat="option in vm.options | filter:search | orderBy:'name' as filteredItems track by option.id" ng-value="option.id")
      | {{option.name}}

    div.md-padding(ng-if='!filteredItems.length')
      p Ничего не найдено
